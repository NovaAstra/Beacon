{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.139.0",
  "pnpmVersion": "9.12.2",
  "nodeSupportedVersionRange": ">=20.18.0",
  "projectFolderMinDepth": 2,
  "projectFolderMaxDepth": 3,
  "approvedPackagesPolicy": {
    "reviewCategories": [
      "frontend",
      "backend",
      "common",
      "extensions"
    ],
    "ignoredNpmScopes": [
      "@types"
    ]
  },
  "repository": {
    "url": "https://github.com/NovaAstra/Beacon",
    "defaultBranch": "main"
  },
  "projects": [
    {
      "packageName": "@beacon/pulse",
      "projectFolder": "apps/pulse",
      "reviewCategory": "backend",
      "shouldPublish": true
    },
    {
      "packageName": "@beacon/components",
      "projectFolder": "packages/components",
      "reviewCategory": "frontend",
      "shouldPublish": true
    },
    {
      "packageName": "@beacon/codeable",
      "projectFolder": "packages/codeable",
      "reviewCategory": "common",
      "shouldPublish": true
    },
    {
      "packageName": "@beacon/elements",
      "projectFolder": "packages/elements",
      "reviewCategory": "frontend",
      "shouldPublish": true
    },
    {
      "packageName": "@beacon/widgets",
      "projectFolder": "packages/widgets",
      "reviewCategory": "frontend",
      "shouldPublish": true
    }
  ]
}